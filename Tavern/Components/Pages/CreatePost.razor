@page "/CreatePost"
<PageTitle>CreatePost</PageTitle>
<div class="centering">
<div class="page create-post-page">
    <h1>Create New Post</h1>
    <form class="post-form" method="post" action="/submit-post">
        <div class="form-group">
            <label for="title">Post Title:</label>
            <input type="text" id="title" name="title" required />
        </div>
        <div class="form-group">
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" required />
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <select id="category" name="category">
                <option value="">Select</option>
                <option value="food">Recipes</option>
                <option value="diy">DIY</option>
                <option value="misc">Misc.</option>
            </select>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" rows="5" required></textarea>
        </div>
        <div class="form-group">
            <label for="image">Image Upload (optional):</label>
            <input type="file" id="image" name="image" accept="image/*" />
        </div>
        <button type="submit" class="button">Submit Post</button>
    </form>
</div>
</div>

<style>
    html, body {
        margin: 0px;
        padding: 0px;
        background-image: url("/imgs/lounge_background.jpg");
        background-size: cover;
