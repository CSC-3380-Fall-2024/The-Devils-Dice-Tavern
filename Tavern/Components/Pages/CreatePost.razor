    html {
        overflow: hidden;
        height: 100%;
    }

    body {
        overflow: auto;
        height: 100%;
        overscroll-behavior: none;
    }
    .centering {
        padding-left: 350px;
    }
    .create-post-page {
        width: 600px;
        height: 100%;
        margin-top: 30px;
        margin-bottom: 20px;
        padding: 30px;
        background-image: url("/imgs/Scrolls/scroll.png");
        background-repeat: no-repeat;
        color: #5c4033;
        background-size: cover;
        background-position: top left;
        text-align: center;
        align-items: center;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
        text-align: left;
    }
    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 10px;
