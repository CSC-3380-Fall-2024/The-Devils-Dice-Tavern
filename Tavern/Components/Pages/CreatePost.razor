@page "/CreatePost"
<PageTitle>CreatePost</PageTitle>
<div class="page create-post-page">
    <h1>Create New Post</h1>
    <form class="post-form" method="post" action="/submit-post">
        <div class="form-group">
            <label for="title">Post Title:</label>
            <input type="text" id="title" name="title" required />
        </div>
        <div class="form-group">
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" required />
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <select id="category" name="category">
                <option value="food">Food</option>
                <option value="diy">DIY</option>
                <option value="misc">Miscellaneous</option>
            </select>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" rows="5" required></textarea>
        </div>
        <div class="form-group">
            <label for="image">Image Upload (optional):</label>
            <input type="file" id="image" name="image" accept="image/*" />
        </div>
        <button type="submit" class="button">Submit Post</button>
    </form>
</div>

<style>
    .create-post-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    .post-form {
        display: flex;
        flex-direction: column;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }
    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }
    .button {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        font-size: 18px;
        cursor: pointer;
    }
</style>
