@page "/Login"

<PageTitle>Login</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Devil's Dice Tavern - Login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Baskerville;
            background-image: url("https://raw.githubusercontent.com/CSC-3380-Fall-2024/The-Devils-Dice-Tavern/d5536933e9ebe9d56102098bc653a7f38d8def31/Tavern/wwwroot/imgs/signup_background.png"); /* Add background URL here */
            background-size: cover;
            background-position: center;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            justify-content: center;
        }
        .login-container {
            background-image: url("https://raw.githubusercontent.com/CSC-3380-Fall-2024/The-Devils-Dice-Tavern/refs/heads/dev/Tavern/wwwroot/imgs/textbox_background.jpg"); 
            background-size: cover;
            padding: 30px;
            border-radius: 10px;
            width: 300px;
            margin-bottom: 20px;
            align-items: center;
            text-align: center;
            color: #5c4033;
            font-family: Baskerville;
        }
        .login-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }
       
        .login-container input[type="text"],
        .login-container input[type="email"],
        .login-container input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            background-color: #f8f4e9;
            
        }
        .login-container button {
            background-color: #333;
            color: white;
            padding: 10px;
            width: 100%;
            font-size: 18px;
        }
        .login-container button:hover {
            background-color: #555;
        }
        .login-container .login-link {
            margin-top: 10px;
            font-size: 14px;
        }
    </style>

</head>
<body>
    <div class="login-container">
        
        <h2>Login</h2>
        <form>
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>

            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>

            <p><a href="/forgot-password">Forgot your password?</a></p>

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>