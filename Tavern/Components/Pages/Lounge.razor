        font-size: 14px;
        color: #888;
    }

    .post-image img {
        width: 100%;
        cursor: pointer;
        border-radius: 5px;
    }

    .post-content {
        margin-top: 20px;
    }

    /* Styling for hidden post content */
    .post-content {
        display: none;
    }

    .post-expand-btn:hover {
        text-decoration: underline;
    }

    ul, ol {
        margin-left: 20px;
    }

    li {
        margin-bottom: 8px;
    }
</style>

<script>
    document.querySelectorAll('.post-expand-btn').forEach(item => {
        item.addEventListener('click', function() {
            const postId = item.getAttribute('data-post');
            const content = document.getElementById(postId);

            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        });
    });
</script>
@code {

    DataTable getItems = new DataTable();
    List<Post> posts = new List<Post>();

    protected override async Task OnInitializedAsync()
    {

        getItems = dbAccess.MySQLConnection_Datatable("SELECT * FROM Forum");
        foreach (DataRow row in getItems.Rows) {

            Post add = new Post {
                Forum_ID = row["Forum_ID"].toString();
                optionalLink = row["optionalLink"].toString() == null ? null : row["optionalLink"].toString();
                postUser = row["postUser"].toString();
                title = row["title"].toString();
                category = row["category"].toString();
                description = row["description"].toString();
                createdAt = row["createdAt"].toString();
            };
            items.Add(add);
        }
    }
}
