        height: 100%;
        overscroll-behavior: none;
    }
    .page {
        background-image: url('https://wallpapercave.com/wp/wp2361283.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: Baskerville, Arial, Helvetica;
    }
    .lounge-page {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .lounge-title {
        font-size: 32px;
        sfont-family: Baskerville, Arial, Helvetica;
        color: #246153;
        margin-bottom: 20px;
    }

    .create-post {
        text-align: center;
        margin-bottom: 20px;
    }

    .button {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    /* White container for the posts */
    .posts-container {
        background-image: url('https://th.bing.com/th/id/OIP.It_mLJgT7vasBABR4eGeTwHaIc?w=143&h=180&c=7&r=0&o=5&dpr=1.5&pid=1.7');
        padding: 20px;
