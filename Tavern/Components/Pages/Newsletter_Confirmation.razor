@page "/Newsletter_Confirmation"
<div class="centering">
    <div class="confirmation-container">
        <h2>Thanks for subscribing to our Newsletter!</h2>
        <p>
			You're now subscribed to our newsletter! You'll hear from us shortly.
		</p>

        <a href="/Campaign">
            <button type="home-page">Finished</button>
        </a>
    </div> 
</div>
<style>
    html, body {
        margin: 0px;
        padding: 0px;
        background-image: url("/imgs/newsletter_background_2.png");
        background-repeat: no-repeat;
    }
    .centering {
        padding-left: 500px;
    }
    .mainheader {
        width: 100%;
        height: 100%;
        margin: 0%;
        padding: 0%;
        background-repeat: no-repeat;
        color: #333;
        background-size: cover;
        background-position: top left;
    }
      .mainheader-text {
        text-align: center;
        color: #333;
        font-family: Baskerville;
    }
    .confirmation-container {
        width: 300px;
        height: 100%;
        margin-top: 30px;
        margin-bottom: 20px;
        padding: 30px;
        background-image: url("https://raw.githubusercontent.com/CSC-3380-Fall-2024/The-Devils-Dice-Tavern/refs/heads/dev/Tavern/wwwroot/imgs/Scrolls/Vector.png");
        background-repeat: no-repeat;
        color: #5c4033;
        background-size: cover;
        background-position: top left;
        text-align: center;
        align-items: center;
    }
    .confirmation-container h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .confirmation-container input[type="name"],
    .confirmation-container input[type="email"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #5c4033;
        border-radius: 5px;
        background-color: #f8f4e9;
  
    .confirmation-container button {
        background-color: #333;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
    }
    .confirmation-container button:hover {
        background-color: #555;
    }
    .confirmation-container .confirmation-link {
         margin-top: 10px;
        font-size: 14px;
    }


</style>
<PageTitle>Newsletter Confirmation</PageTitle>