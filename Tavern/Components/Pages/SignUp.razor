@page "/SignUp"

<PageTitle>SignUp</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Devil's Dice Tavern - Sign Up</title>
    <style>
        /* Reset and page setup */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-image: url("https://raw.githubusercontent.com/CSC-3380-Fall-2024/The-Devils-Dice-Tavern/d5536933e9ebe9d56102098bc653a7f38d8def31/Tavern/wwwroot/imgs/signup_background.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            justify-content: center;
        }

        /* Form container */
        .signup-container {
            background-image: url("https://raw.githubusercontent.com/CSC-3380-Fall-2024/The-Devils-Dice-Tavern/d5536933e9ebe9d56102098bc653a7f38d8def31/Tavern/wwwroot/imgs/textbox_background.jpg");
            background-size: cover;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
            width: 450px;
            text-align: center;
            color: #5c4033;
            font-family: 'Times New Roman', Times, serif;
            margin-top: 100px;
        }
      
        .signup-container h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        .signup-container label {
            font-size: 16px;
            display: block;
            margin-bottom: 5px;
            text-align: left;
        }
        .signup-container input[type="text"],
        .signup-container input[type="email"],
        .signup-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #5c4033;
            border-radius: 5px;
            background-color: #f8f4e9;
            font-size: 14px;
        }
        .signup-container button {
            background-color: #333;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }
        .signup-container button:hover {
            background-color: #555;
        }
        .signup-container p {
            margin-top: 15px;
            font-size: 14px;
        }

        .signup-container .login-link {
            color: #333;
            text-decoration: none;
        }
        .signup-container .login-link:hover {
            text-decoration: underline;
        }
   
        .name-fields {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }
        .name-fields div {
            width: 48%; 
        }

        .password-fields {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }
        .password-fields div {
            width: 48%; 
        }

        .dropdown-container {
            margin-bottom: 15px;
            width: 100%;
        }
        .dropdown-container select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #5c4033;
            border-radius: 5px;
            background-color: #f8f4e9;
            font-size: 14px;
        }

        /* Footer */
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #2f4f4f;
            color: white;
            text-align: center;
            padding: 10px 0;
            display: flex;
            justify-content: center;
            align-items: left;
            gap: 20px;

        }
        .footer a {
            color: white;
            text-decoration: none;
            font-size: 14px;
        }
        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>


    <!-- Signup Form -->
    <div class="signup-container">
        <h2>Sign Up</h2>
        <form>
            <div class="name-fields">
                <div>
                    <label for="first-name">First Name</label>
                    <input type="text" id="first-name" name="first-name" required>
                </div>
                <div>
                    <label for="last-name">Last Name</label>
                    <input type="text" id="last-name" name="last-name" required>
                </div>
            </div>

            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>

            <div class="password-fields">
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                 </div>
                 <div>
                    <label for="re-password">Re-enter Password</label>
                    <input type="password" id="re-password" name="re-password" required>
                </div>
             </div>

             <div class="dropdown-container">
                <label for="role">Select Role</label>
                <select id="role" name="role" required>
                    <option value="">Select
                        
                    </option>
                    <option value="DND Player">DND Player</option>
                    <option value="Dungeon Master">Dungeon Master</option>
                </select>
            </div>

            <button type="submit">Submit</button>
            <p>
                <a href="login" class="login-link">Already have an account? Log In</a>
            </p>
        </form>
    </div>

    <!-- Footer -->
    <div class="footer">
        <a href="#">Contact Us</a>
        <a href="#">Terms of Service</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Socials</a>
    </div>

</body>
</html>